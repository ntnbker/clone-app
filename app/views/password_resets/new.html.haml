%div.container.reset-password
	%h1 Reset Password
	%div.form-reset
		= bootstrap_form_tag url:password_resets_path do 
			%div.form-group
				= label_tag :email, nil, class: 'form-control'
				= email_field_tag :email, nil, class: 'form-control', required: true
			%div.form-group
				= button_tag "Reset Password", class: 'button-primary green'
