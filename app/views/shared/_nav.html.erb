
<%= form_tag search_maintenance_request_path, method: :get do %>
  <%= search_field_tag :query, params[:query], placeholder:"Search Address, Tenant Name, or Landlord Name"%>
  <%= button_tag 'Search', type: 'submit'%>
<% end %>

<%=link_to "My Maintenance Requests", maintenance_requests_path%>
</br>
<%=link_to "Add Agent", new_agent_path%>
<%=link_to "Add Agency Admin", new_agency_admin_path%>
<%=link_to "sort", ordered_maintenance_requests_path(sort_by_date:"Newest to Oldest")%>

<% if local_assigns.has_key? :expanded %>
    <%= react_component('Header', {
          logged_in: logged_in?,
          current_user: current_user,
          menu_login_path: menu_login_path,
          new_agency_path: new_agency_path,
          root_path: root_path,
          maintenance_requests_path: maintenance_requests_path,
          conversations_path: conversations_path,
          logout_path: logout_path,
          expanded: true
    }) %>
<%end %>

<% if !local_assigns.has_key? :expanded %>
    <%= react_component('Header', {
          logged_in: logged_in?,
          current_user: current_user,
          menu_login_path: menu_login_path,
          new_agency_path: new_agency_path,
          root_path: root_path,
          maintenance_requests_path: maintenance_requests_path,
          conversations_path: conversations_path,
          logout_path: logout_path,
          expanded: false
    }) %>
<%end %>