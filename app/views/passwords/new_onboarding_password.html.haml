%div.container.reset-password
  %h1 Please Set Password Below  
  %div.form-reset
    = bootstrap_form_for @user, url: "/create_onboarding_password", method: :post do |f| 
      
      = @user.email 
      =f.hidden_field :email, value: @user.email
      = f.password_field :password , required: true , minlength: 3
      = f.password_field :password_confirmation, required: true , autocomplete: "off", minlength: 3
      =f.hidden_field :maintenance_request_id, value: @maintenance_request_id
      =f.hidden_field :trady_id, value: @trady_id
      = button_tag "Submit", class: 'button-primary green'
