%div.container
  This is the view for the landlord when he gets quotes 
  
  -@quotes.each do |quote|
    -quote.quote_items.each do |f|
      %div.well
        %h5
          =quote.trady.name
        %h6
          =quote.trady.company_name  
        %p
          =f.item_description
          =f.amount 
        %p
        total:
        ="$" + quote.amount.to_s
        -if quote.status == "Active"
          %button{:type=>"button", :class=>"btn btn-primary btn-lg"} 
            =link_to "Approve", landlord_decides_quote_path(quote_id:quote.id,status:"Approved", maintenance_request_id:@maintenance_request.id), method: :post
          %button{:type=>"button", :class=>"btn btn-primary btn-lg"}
            =link_to "Request Another Quote", request_quote_path(maintenance_request_id:@maintenance_request.id), method: :post
          / %button{:type=>"button", :class=>"btn btn-primary btn-lg"}  
          /   =link_to "Decline", landlord_decides_quote_path(quote_id:quote.id,status:"Declined",maintenance_request_id:@maintenance_request.id), method: :post

       