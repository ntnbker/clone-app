%div.container.well
  %div.send-email-quote
    %div.header-quote
      %div.logo
        = link_to "#" do
          %img{:src => asset_path("assets/logo.png"), :class => 'img'}
      %div.info-quote
        %p
          %span
            = "#{@trady.trady_company.company_name}"
        %p
          %span
            = "#{@trady.trady_company.abn}"
        %p
          %span
            = "#{@trady.trady_company.address}"
        %p
          %span
            = "#{@trady.trady_company.mobile_number}"
        %p
          %span
            = "#{@trady.trady_company.email}"

    %hr
    %div.quote
      %div.info-agency
        %p.color-grey.bill-to Bill To
        %p.text-capitalize
          = @landlord ? "#{@landlord.name}" : nil
        %p
          = @agency ? "C/-" + "#{@agency.company_name}" : nil
        %p
          = @agency ? "#{@agency.address}" : nil

      %div.date-quote
        %p
          %span.font-bold Quote Reference:
          %span
            = @quote.trady_quote_reference != "" ? "#{@quote.trady_quote_reference}" : "#{@property.property_address}"
        %p
          %span.font-bold Quote Date:
          %span
            = "#{@quote.created_at.strftime('%B %d, %Y')}"
    %div.quote-items

      %table
        %tr
          %th Description
          %th Pricing
          %th.text-right Rate
          %th.text-right Amount
        -@quote.quote_items.each do |f|

          %tr
            %td
              ="#{f.item_description.capitalize}"
            %td
              =f.pricing_type

            %td.text-right
              -if f.pricing_type == 'Hourly'
                ="$#{f.amount.round(2)}"
            %td.text-right
              -if f.pricing_type == 'Fixed Cost'
                = "$#{f.amount.round(2)}"

      %div.button-quote
        %button{:type=>"button", :class=>"button button-primary send-quote-back-btn"}
          =link_to "Back", edit_quote_path(@quote, maintenance_request_id:@maintenance_request.id, trady_id:@trady_id, quote_type:@quote_type, system_plan:@system_plan), class: 'send-quote-back-child'
        %button{:type=>"button", :class=>"button button-primary green send-quote-btn"}
          =link_to "Send Quote", quote_email_path(maintenance_request_id:@maintenance_request.id,quote_id:@quote.id), class: 'send-quote-child'

:javascript
  $(document).ready( function() {
    $('button.send-quote-btn').click(function() {
      window.href = $(this).find('a.send-quote-child').attr('href');
    });
    $('button.send-quote-back-btn').click(function() {
      window.href = $(this).find('a.send-quote-back-child').attr('href');
    });
  });
