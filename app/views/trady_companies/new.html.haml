  / =react_component('TradyCompanies', {:authenticity_token => form_authenticity_token,
  /                                     :company_name => @company.nil? ? @trady.company_name : @company.company_name,
  /                                     :trading_name => @company.nil? ? '' : @company.trading_name,
  /                                     :abn => @company.nil? ? '' : @company.abn,
