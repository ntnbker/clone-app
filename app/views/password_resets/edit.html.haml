%div.container.reset-password
	%h1 Choose a new password
	%div.form-reset
		= bootstrap_form_for @user,url: password_reset_path(@token), :html => {:method => :put} do |f| 
			= f.label :email 
			= @user.email 
			= f.password_field :password , required: true , minlength: 3
			= f.password_field :password_confirmation, required: true , autocomplete: "off", minlength: 3
			= button_tag "Update", class: 'button-primary green'
