%div.container.well
  %p
    Please enter quote details
  =bootstrap_nested_form_for(@quote, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-10") do |f|
    #items
      =f.fields_for :quote_items do |contacts_form|
        = render "quote_item_fields", f: contacts_form
        = link_to_add_association "Add Another item", f, :quote_items
    =f.submit "Next"

  
