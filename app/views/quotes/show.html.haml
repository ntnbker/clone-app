%div.container.well
  %div.send-quote
    %h2
      Maintenance Request Quote
  %h6
    ="Name: #{@trady.name.capitalize}"
  %h6
    ="Company Name: #{@trady.trady_company.company_name.capitalize}"
  %h6
    ="Company Trading Name: #{@trady.trady_company.trading_name.capitalize}"
  %h6
    ="ABN: #{@trady.trady_company.trading_name.capitalize}"
  %h6
    ="Address: #{@trady.trady_company.address}"
  %h6
    ="Mailing Address: #{@trady.trady_company.mailing_address}"
  %h6
    ="Email: #{@trady.trady_company.email}"
  %h6
    ="Mobile: #{@trady.trady_company.mobile_number}"
  %h6
    ="Bank Account Name: #{@trady.trady_company.trading_name.capitalize}"
    %table{:style=>"width:50%"}
      %tr
        %th Description
        %th Pricing
        %th Rate
        %th Hours
        %th Total
      -@quote.quote_items.each do |f|
      
        %tr
          %td
            ="#{f.item_description.capitalize}"
          %td 
            =f.pricing_type
          %td 
            ="$ #{f.amount.to_f}"
          %td
            -if f.pricing_type == 'Fixed Cost'
              N/A
            -elsif f.pricing_type == 'Hourly'
              = f.hours
          %td
            -if f.pricing_type == 'Fixed Cost'
              = f.amount
            -elsif f.pricing_type == 'Hourly'
              ="$#{f.amount * f.hours}"
            
    %div.row
    = "Items Total: #{@quote.amount} "
    %br   
    -if @quote.tax == true
      %p
        = "GST: #{@quote.gst_amount.round(2)}"
      %br   
    -elsif @quote.tax == false
      %p
        GST: $ 0.00
    %br    
    
    ="Grand Total: $#{@quote.amount.round(2)}"
    %br 

    
    
    %button{:type=>"button", :class=>"button button-primary"} 
      =link_to "Back", edit_quote_path(@quote, maintenance_request_id:@maintenance_request.id, trady_id:@trady_id, quote_type:@quote_type, system_plan:@system_plan)
    %button{:type=>"button", :class=>"button button-primary green"} 
      =link_to "Send Quote", quote_email_path(maintenance_request_id:@maintenance_request.id,quote_id:@quote.id)



  
