%div.container.invoice-form.well
  / %h6
  /   ="Invoice Status: #{@invoice.payment_status}"

  %h4 
    Invoice
  %h5
    Company Information
  %hr
  %p
    =@trady.trady_company.company_name
    %br
    =@trady.trady_company.address
    %br
    =@trady.trady_company.mobile_number
    %br
    =@trady.trady_company.email
  
  -@invoice.invoice_items.each do |f|
  
    %div.row
      %hr
      -if f.pricing_type == "Hourly"
        ="#{f.item_description.capitalize} (#{f.hours} hours X $ #{f.amount.to_f} /hour) : $#{f.amount * f.hours}" 
      -elsif f.pricing_type == "Fixed Cost"
        ="#{f.item_description.capitalize}: $ #{f.amount.to_f}"
      
          
           
  %hr
  %div.row
    -if @invoice.tax == true
      %p
        = "GST: #{ (@invoice.amount - @invoice.amount/1.10).round(2)}"
    -elsif @invoice.tax == false
      %p
        GST: $ 0.00
    %br    
    %span
      ="Total: $#{@invoice.amount}"
  
  %hr
  / -if @invoice.invoice_payments
  /   %h3
  /     Amounts Paid
  /   -@invoice.invoice_payments.each do |payment| 
  /     %hr
  /     %div.row
  /       ="Amount Paid: $#{payment.amount_paid}"
  /       =link_to "Edit", edit_invoice_payment_path(payment, invoice_id:@invoice.id)
  /       %br
  /       ="Date Paid:#{payment.date}"
  /   %hr
  /   %h5
  /     ="Total Paid: $#{@invoice.amount_paid}"
        
        
  %button.button.button-primary.green
    = link_to 'Print Invoice', print_invoice_path(id:@invoice), :onclick => 'window.print();return false;', method: :post
