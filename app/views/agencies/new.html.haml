%div.well.container
  %h4
    Agency Admin
  =bootstrap_nested_form_for(@user, url: agencies_path, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-10") do |f|
    =f.email_field :email, hide_label: false 
    =f.password_field :password, hide_label: false 
    =f.password_field :password_confirmation

      
    =f.fields_for :agency_admin do |admin|
      =admin.text_field :first_name
      =admin.text_field :last_name
      =admin.phone_field :mobile_phone
      %hr
      %h4
        Agency Information
      =admin.fields_for :agency do |agency|
        =agency.text_field :company_name
        =agency.text_field :business_name
        =agency.text_field :abn
        =agency.text_field :address
        =agency.form_group :mailing_same_address do 
          =agency.check_box :mailing_same_address, label: "Mailing addess same as billing address"
        =agency.text_field :mailing_address
        =agency.phone_field :phone  
        =agency.phone_field :mobile_phone
        
        =agency.form_group :license_type, label: { text: "License Type" } do 
          =agency.radio_button :license_type, "Individual License", label: "Individual License", checked: true
          =agency.radio_button :license_type, "Corporate License", label: "Corporate License", checked: true
        =agency.text_field :license_number
        =agency.text_field :corporation_license_number
        =agency.form_group :bdm_verification_status do 
          =agency.check_box :bdm_verification_status, label: "I Have BDM verfication status"
        =agency.text_field :bdm_verification_id
      
    
      
      
        
      
    
    =f.submit "Sign Up"
    %p Already have an Account? 
    =link_to "Login", login_path
