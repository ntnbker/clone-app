= react_component 'AddInvoicePDF', {:authenticity_token => form_authenticity_token, :maintenance_request_id => @maintenance_request_id, :trady_id => @trady_id, :quote_id => @quote_id}
/ %div.container.invoice-form
/   %h5
/     Please Attach Your Invoice(s)!!
/   %div
/     =form_for @file do |f|
/       = f.hidden_field :pdf, value: @file.cached_pdf_data
/       =f.hidden_field :maintenance_request_id, value:@maintenance_request_id
/       =f.hidden_field :trady_id, value:@trady_id
/       =f.hidden_field :quote_id, value:@quote_id
/       =f.hidden_field :invoice_type, value:"pdf_file"
/       =f.hidden_field :system_plan, value:"Invoice"
/       =f.file_field :pdf
/       =f.submit "Attach PDF", class: 'button-primary green'
