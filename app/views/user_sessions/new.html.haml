.container.well#login
  = bootstrap_form_tag url: '/menulogin' do |f| 
    = f.select(:role_picked, [["Agent","Agent"],["Agency Admin","AgencyAdmin"],["Tenant","Tenant"],["Trady","Trady"],["Landlord","Landlord"]], {prompt:"Select Role", :label => "Sign In As"})
    = f.email_field :email, placeholder: 'Enter email', autocapitalize: "off", autocorrect: "off", autoComplete: "off"
    = f.password_field :password,  placeholder: 'Enter password'
    .form-group.text-center
      = link_to "Forgot your password?", new_password_reset_path, class: 'forgot-password'
    .form-group.text-center
      = f.button "Log In", class:"button-primary green"

